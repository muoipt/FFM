<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.muoipt.ffm.view.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_color"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/about_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_20"
            app:layout_scrollFlags="scroll"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:titleTextAppearance="@style/Toolbar.TitleText"
            app:titleTextColor="@color/color_white" />


        <RelativeLayout
            android:id="@+id/aboutContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_app_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100_app_icon_width"
                android:layout_marginTop="@dimen/dp_100_app_icon_margin_top"
                android:gravity="center_horizontal"
                android:src="@drawable/app_logo_about" />

            <TextView
                android:id="@+id/txt_app_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_app_about"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_horizontal"
                android:text="Family Financial Management"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/txtVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dp_30"
                android:gravity="bottom|center_horizontal"
                android:text="Version 2.0 by Muoipt"
                android:textColor="@color/color_black"
                android:textColorLink="@color/main_color_listview_status_ok"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
