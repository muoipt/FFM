<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/member_item_more_btn"
        android:layout_width="@dimen/button_size_24dp"
        android:layout_height="@dimen/button_size_24dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_more_vert_black"
        android:layout_margin="@dimen/common_padding_minor"/>

    <LinearLayout
        android:id="@+id/group_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <com.xalenmy.ffm.utils.CircularImageView
            android:id="@+id/member_item_img"
            android:layout_width="@dimen/member_item_img_width"
            android:layout_height="@dimen/member_item_img_width"
            android:background="@drawable/button_round_image"
            android:src="@drawable/icon_default_camera_large"
            android:layout_margin="@dimen/common_padding_minor"/>

        <TextView
            android:id="@+id/member_item_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MyEmail@gmail.com"
            android:textSize="@dimen/text_size_normal"
            android:layout_margin="@dimen/common_padding_minor"/>

    </LinearLayout>
</RelativeLayout>