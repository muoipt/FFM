<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/popup_dialog_padding">

        <ImageView
            android:id="@+id/img_sync"
            android:layout_width="@dimen/img_sync_width"
            android:layout_height="@dimen/img_sync_width"
            android:src="@drawable/cloud"/>

        <TextView
            android:id="@+id/txt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/sync_question" />

        <Button
            android:id="@+id/btn_sync_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/button_ok"
            android:textSize="@dimen/text_size_large"
            android:background="@drawable/button_with_ripple"/>

    </LinearLayout>

</LinearLayout>