<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xalenmy.ffm.view.MainSettingActivity">


    <RelativeLayout
        android:id="@+id/layout_setting_sync"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_sync_allways"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:checked="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/cb_sync_allways"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:paddingTop="@dimen/dp_24">

            <TextView
                android:id="@+id/txt_sync_setting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sync_setting_title"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txt_sync_setting_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="email@gmail.com"
                android:textColor="@color/setting_item_color_textview_details"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/div1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <RelativeLayout
        android:id="@+id/layout_setting_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_edit_setting_account"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_action_edit_setting"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/img_edit_setting_account"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_24"
            android:paddingRight="@dimen/dp_24"
            android:paddingTop="@dimen/dp_24">

            <TextView
                android:id="@+id/txt_account_setting_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/acount_setting_title"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/txt_acount_setting_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="email@gmail.com"
                android:textColor="@color/setting_item_color_textview_details"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/div2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <RelativeLayout
        android:id="@+id/layout_setting_theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_edit_setting_theme"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@drawable/color_picker"/>

            <TextView
                android:id="@+id/txt_theme_setting_title"
                android:layout_toLeftOf="@id/img_edit_setting_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_setting_title"
                android:textSize="@dimen/sp_20"
                android:layout_centerInParent="true"
                android:paddingLeft="@dimen/dp_24"/>
    </RelativeLayout>

    <View
        android:id="@+id/div3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"/>

    <RelativeLayout
        android:id="@+id/layout_setting_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_edit_setting_text"
            android:layout_width="@dimen/dp_50"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:src="@drawable/color_picker"/>

        <TextView
            android:id="@+id/txt_text_setting_title"
            android:layout_toLeftOf="@id/img_edit_setting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_setting_title"
            android:textSize="@dimen/sp_20"
            android:layout_centerInParent="true"
            android:paddingLeft="@dimen/dp_24"/>
    </RelativeLayout>

    <View
        android:id="@+id/div4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:visibility="gone"/>

</LinearLayout>
