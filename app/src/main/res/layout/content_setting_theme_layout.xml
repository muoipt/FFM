<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_color"
        android:textSize="@dimen/sp_20"
        android:padding="@dimen/dp_10"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <ImageButton
            android:id="@+id/color_1"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_1" />
        <ImageButton
            android:id="@+id/color_2"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_2" />
        <ImageButton
            android:id="@+id/color_3"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_3" />
        <ImageButton
            android:id="@+id/color_4"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_4" />
        <ImageButton
            android:id="@+id/color_5"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_5" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <ImageButton
            android:id="@+id/color_6"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_6" />
        <ImageButton
            android:id="@+id/color_7"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_7" />
        <ImageButton
            android:id="@+id/color_8"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_8" />
        <ImageButton
            android:id="@+id/color_9"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_9" />
        <ImageButton
            android:id="@+id/color_10"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_10" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">
        <ImageButton
            android:id="@+id/color_11"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_11" />
        <ImageButton
            android:id="@+id/color_12"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_12" />
        <ImageButton
            android:id="@+id/color_13"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_13" />
        <ImageButton
            android:id="@+id/color_14"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_14" />
        <ImageButton
            android:id="@+id/color_15"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_3"
            android:background="@drawable/button_round_color_15" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/btn_select_color_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/string_cancel"
        android:textSize="@dimen/sp_16"
        android:background="@color/color_transparent"
        android:textColor="@color/main_color_banner"
        android:layout_marginTop="@dimen/dp_10"/>
    </RelativeLayout>

</LinearLayout>