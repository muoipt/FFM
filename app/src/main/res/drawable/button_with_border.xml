<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/color_transparent"/>
            <stroke android:width="@dimen/dp_1" android:color="@color/main_color_banner"/>
        </shape>
    </item>
    <!--button focused state background color-->
    <item android:state_focused="true" android:state_pressed="false" android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_color_footer"/>
            <stroke android:width="@dimen/dp_1" android:color="@color/main_color_banner"/>
        </shape>
    </item>

    <!--button pressed state background color-->
    <item android:state_focused="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_color_banner"/>
            <stroke android:width="@dimen/dp_1" android:color="@color/main_color_banner"/>
        </shape>
    </item>
</selector>